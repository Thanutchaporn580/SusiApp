<GameScreen>:
    canvas.before:
        Rectangle:
            source: 'during_game_background.png'
            size: self.size
            pos: self.pos
    FloatLayout:
        CustomButton:
            text: "Leave"
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_press: root.leave_game()

<ScoreScreen>:       


<EndScreen>:
    canvas.before:
        Rectangle:
            source: 'endbackground.png'
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            id: final_score_label
            text: "Score: 0"
            font_size: 36
            size_hint: 1, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
        CustomButton:
            background_normal: 'play_again_button.png'  
            background_down: 'play_again_button_pressed.png'  
            size_hint: 0.3, 0.2
            pos_hint: {"center_x": 0.2, "center_y": 0.2}
            on_press: app.play_again()
        CustomButton:
            background_normal: 'exit_button.png'  
            background_down: 'exit_button_pressed.png'  
            size_hint: 0.3, 0.2
            pos_hint: {"center_x": 0.8, "center_y": 0.2}
            on_press: app.back_to_main()
            
