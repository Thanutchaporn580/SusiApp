<MainScreen>:
    canvas.before:
        Rectangle:
            source: 'mainbackground.jpg'
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            text: "Hit the Seal-_-"
            font_size: 50
            size_hint: 1, 0.2
            color: 1, 0, 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        CustomButton:
            text: "Start Game"
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_press: app.root.current = 'rules' 
        CustomButton:
            text: "Quit"
            size_hint: 0.2, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: app.stop()  #callback for exit
        CustomButton:
            background_normal: 'setting_button.png'  
            background_down: 'setting_button_pressed.png'  
            size_hint: 0.3, 0.2
            pos_hint: {"center_x": 0.8, "center_y": 0.6}
            on_press: app.show_settings_popup()

<RulesGameScreen>:
    canvas.before:
        Rectangle:
            source: 'rulespage.png'
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            text: "Tips for getting started"
            font_size: 40
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        Label:
            text: "- You have a limited time to complete each level\n\nby hit the seals according to the levels specified.\n\n- Each level gets progressively harder.\n\n- Good luck and Enjoy!"
            font_size: 30
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        CustomButton:
            text: "Select Level"
            font_size: 24
            color:  1, 0.5, 0.5, 1
            size_hint: 0.2, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: app.root.current = 'choose_level'
            

